<div class="event-fields border border-gray-200 rounded-lg p-4 bg-gray-50" data-intake-events-target="eventField">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-sm font-medium text-gray-700">Event Details</h3>
    <button type="button" 
            data-action="click->intake-events#removeEvent"
            class="text-red-600 hover:text-red-700 text-sm font-medium flex items-center">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      Remove
    </button>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :event_date_on, "Event Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.date_field :event_date_on, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-2 border" %>
    </div>

    <div>
      <%= form.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :event_type, 
          options_for_select([
            ['Masters Tournament', 'masters'],
            ['Wedding', 'wedding'],
            ['Corporate Event', 'corporate'],
            ['Conference', 'conference'],
            ['Sports Event', 'sports'],
            ['Festival', 'festival'],
            ['Private Event', 'private'],
            ['Other', 'other']
          ], form.object.event_type),
          { include_blank: "Select event type" },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-2 border" %>
    </div>
  </div>

  <%= form.hidden_field :_destroy %>
</div>

