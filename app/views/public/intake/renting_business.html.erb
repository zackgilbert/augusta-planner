<% content_for :title, "Step 1: Renting Business - Augusta Planner Intake" %>

<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <%= image_tag "logo.png", alt: "Augusta Planner", class: "h-20 mx-auto mb-4" %>
      <h1 class="text-3xl font-bold text-gray-900">Augusta Rental Agreement Intake</h1>
      <p class="mt-2 text-gray-600">Let's get started with your rental information</p>
    </div>

    <%= render 'progress', current_step: 'renting_business' %>

    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">Step 1: Renting Business Information</h2>
      
      <%= form_with model: @client, url: public_intake_step_path(step: 'renting_business'), method: :patch, local: true, class: 'space-y-6' do |form| %>
        <div>
          <%= form.label :business_name, "Business Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :business_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", placeholder: "Your Business Name", required: true, autofocus: true %>
          <% if @client.errors[:business_name].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @client.errors[:business_name].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.label :ein, "EIN (Employer Identification Number)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :ein, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", placeholder: "XX-XXXXXXX", required: true %>
          <p class="mt-1 text-xs text-gray-500">Format: XX-XXXXXXX</p>
          <% if @client.errors[:ein].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @client.errors[:ein].first %></p>
          <% end %>
        </div>

        <div class="pt-4">
          <%= form.submit "Continue to Property Owner Info", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <p>Already have an account? <%= link_to "Sign in", new_user_session_path, class: "text-green-600 hover:text-green-700 font-medium" %></p>
    </div>
  </div>
</div>

