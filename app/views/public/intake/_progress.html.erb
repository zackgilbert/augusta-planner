<%
  steps = [
    { name: 'Renting Business', key: 'renting_business' },
    { name: 'Property Owner', key: 'property_owner' },
    { name: 'Events', key: 'events' }
  ]
  current_index = steps.find_index { |s| s[:key] == current_step }
%>

<nav class="mb-8">
  <ol class="flex items-center justify-center space-x-4">
    <% steps.each_with_index do |step, index| %>
      <li class="flex items-center">
        <% if index > 0 %>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-300 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
        
        <div class="flex flex-col items-center">
          <div class="<%= index == current_index ? 'bg-green-600 text-white' : index < current_index ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-600' %> rounded-full h-10 w-10 flex items-center justify-center font-semibold">
            <% if index < current_index %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            <% else %>
              <%= index + 1 %>
            <% end %>
          </div>
          <span class="text-xs mt-1 <%= index == current_index ? 'text-green-700 font-semibold' : 'text-gray-600' %>">
            <%= step[:name] %>
          </span>
        </div>
      </li>
    <% end %>
  </ol>
</nav>

