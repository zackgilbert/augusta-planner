<% content_for :title, "Step 2: Property Owner Info - Augusta Planner Intake" %>

<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <%= image_tag "logo.png", alt: "Augusta Planner", class: "h-20 mx-auto mb-4" %>
      <h1 class="text-3xl font-bold text-gray-900">Augusta Rental Agreement Intake</h1>
      <p class="mt-2 text-gray-600">Property owner details</p>
    </div>

    <%= render 'progress', current_step: 'property_owner' %>

    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">Step 2: Property Owner Information</h2>
      
      <%= form_with model: @agreement, url: public_intake_step_path(step: 'property_owner'), method: :patch, local: true, class: 'space-y-6' do |form| %>
        <div>
          <%= form.label :owner_name, "Property Owner Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :owner_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", placeholder: "Full Name", required: true, autofocus: true %>
        </div>

        <div>
          <%= form.label :owner_email, "Property Owner Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :owner_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", placeholder: "owner@example.com", required: true %>
        </div>

        <div>
          <%= form.label :property_address, "Property Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :property_address, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", placeholder: "Full property address including street, city, state, and zip", required: true %>
          <% if @agreement.errors[:property_address].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @agreement.errors[:property_address].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.label :year, "Agreement Year", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :year, value: Time.current.year, min: Time.current.year, max: Time.current.year + 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-4 py-3 border", required: true %>
        </div>

        <div class="pt-4 flex gap-3">
          <%= link_to "Back", public_intake_step_path(step: 'renting_business'), class: "flex-1 flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" %>
          <%= form.submit "Continue to Events", class: "flex-1 flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

