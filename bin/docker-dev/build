#!/usr/bin/env bash

# Build an image named augusta_planner_dev
# Based on dev.Dockerfile
# Using the top level app directory as context
docker build \
  -t augusta_planner_dev \
  -f dev.Dockerfile \
  --build-arg BULLET_TRAIN_VERSION=$(grep -m 1 BULLET_TRAIN_VERSION Gemfile | cut -d '"' -f 2) \
  .
